<article class="card" lang="{{ language }}">
	<div class="card-body">
		<article>
			<header>
				<h1>{{title}}</h1>
			</header>
			<div>{{formattedDate}} | Topics:  
				{% for topic in topics %}
					<a href="/topics/{{ topic.slug }}">{{ topic.name }}</a>
				{% endfor %}
			</div>
			<div class="disclaimer"> This article was written by an AI ðŸ¤–. The original article can be found <a href="{{source_link}}">here</a>. </div>
			{{ content | safe }}
		</article>
	</div>
</article>